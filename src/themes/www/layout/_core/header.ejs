<header id="header" class="b-section">
  <div class="b-container">
    <section class="b-columns">

      <nav id="menu" class="b-column b-is-12" role="menu">
        <div class="b-columns b-is-mobile">
          <div class="h-logo b-column b-is-3-mobile b-is-1-tablet">
            <a href="<%- config.root %>"><img src="<%- url_for('lib/framework/img/logo/logo.svg') %>" alt="Tony Ko's Portfolio Logo"></a>
          </div>
          <div class="h-name b-column b-is-6-mobile b-is-5-tablet">
            <a href="<%- config.root %>" role="menuitem"><%= config.title %></a>
            <p><% if (config.subtitle){ %><%= config.subtitle %><% } %></p>
          </div>
          <div class="h-menu b-column b-is-2-mobile b-is-3-tablet">
            <% for (var i in theme.menu){ %>
              <a href="<%- url_for(theme.menu[i].link) %>" role="menuitem"> <i class="fa <%= theme.menu[i].icon %>" aria-hidden="true"></i> &nbsp; <span class="b-is-hidden-mobile"><%= theme.menu[i].title %></span> </a>
            <% } %>
          </div>
          <div class="h-links b-column b-is-1-mobile b-is-3-tablet">
            <% for (var i in theme.links){ %>
              <% var target = ( theme.links[i].title === 'About Me' ? '_self' : '_blank' )%>
              <a href="<%- url_for(theme.links[i].link) %>" target="<%- target %>" role="menuitem"> <span class="b-is-hidden-mobile"><%= theme.links[i].title %></span> &nbsp; <i class="fa <%= theme.links[i].icon %>" aria-hidden="true"></i> </a>
            <% } %>
          </div>
        </div>
      </nav>

    </section>
  </div>
</header>
